---
import Base from "../../layouts/Base.astro";
import "@/styles/globals.css";
import FAQAccordion from "@/components/ApplyFAQ";
import { ViewTransitions } from "astro:transitions";
---

<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/LOGO.png" />
    <ViewTransitions />
  </head>
  <body>
    <Base>
      <main class="flex-1">
        <section
          class="w-full py-12 md:py-24 lg:py-32"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <div class="container mx-auto px-4 md:px-6 text-center">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold">
              <strong transition:name="apply"> Apply</strong>
               to Creek CSHS
            </h1>
            <p class="mt-4 text-lg md:text-xl lg:text-2xl max-w-2xl mx-auto">
              Join our community of passionate computer science students!
            </p>
          </div>
        </section>

        <section
          class="w-full py-12 md:py-24 lg:py-32 bg-gray-100"
          data-aos="fade-down"
          data-aos-delay="200"
        >
          <div
            class="container mx-auto px-4 md:px-6 justify-center align-middle"
          >
            <div
              class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow justify-self-center align-middle flex justify-center"
            >
              <!-- Embed Google Form Here -->
              <a
                class="inline-flex h-10 items-center justify-center rounded-md bg-red-600 px-8 text-sm font-medium text-white shadow transition-colors hover:bg-red-500 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-red-700"
                href="https://forms.gle/PwBmMyPix3Qsntn4A"
              >
                Take me to the form!
              </a>
            </div>
          </div>
        </section>
        <section
          class="w-full py-12 md:py-24 lg:py-32"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <div class="container mx-auto px-4 md:px-6 text-center">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold">
              Frequently Asked Questions
            </h2>
            <div class="mt-8">
              <FAQAccordion client:load />
            </div>
          </div>
        </section>
      </main>
    </Base>
  </body>
</html>
